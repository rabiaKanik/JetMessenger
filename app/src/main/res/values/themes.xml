<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JetMessenger" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/messengerBlue</item>
        <item name="colorPrimaryVariant">@color/messengerLightBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/messengerBlue</item>
        <item name="colorSecondaryVariant">@color/messengerLightBlue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/white</item>

        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.JetMessenger.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>